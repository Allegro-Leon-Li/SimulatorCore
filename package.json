{
  "name": "@fruk/simulator-core",
  "version": "1.0.0",
  "description": "FIRST Robotics Simulator Core",
  "main": "dist/package.js",
  "scripts": {
    "build": "tsc",
    "build+watch": "tsc -w",
    "build:netlify": "sh netlify_build.sh",
    "start-web": "webpack-dev-server",
    "postinstall": "tsc",
    "format": "prettier --write src",
    "checkFormat": "prettier --check src",
    "lint": "eslint ./src --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "npm run lint -- --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/FRUK-Simulator/SimulatorCore.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/FRUK-Simulator/SimulatorCore/issues"
  },
  "homepage": "https://github.com/FRUK-Simulator/SimulatorCore#readme",
  "dependencies": {
    "planck-js": "^0.3.18",
    "three": "^0.117.1",
    "typescript": "^3.9.5",
    "uuid": "^8.1.0"
  },
  "devDependencies": {
    "@types/uuid": "^8.0.0",
    "@typescript-eslint/eslint-plugin": "^3.2.0",
    "@typescript-eslint/parser": "^3.2.0",
    "eslint": "^7.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.10",
    "prettier": "^2.0.5",
    "ts-loader": "^7.0.5",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.11.0"
  },
  "hooks": {
    "pre-commit": "npm run format"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,css,scss,md}": [
      "prettier --write"
    ]
  }
}
